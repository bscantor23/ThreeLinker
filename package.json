{
  "name": "threejs-editor",
  "version": "1.0.0",
  "description": "Three.js Editor - Standalone version",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "server:3001": "PORT=3001 INSTANCE_ID=server-1 node server.js",
    "server:3002": "PORT=3002 INSTANCE_ID=server-2 node server.js",
    "dev:ha": "concurrently \"npm run server:3001\" \"npm run server:3002\" \"npm run dev\"",
    "build:nginx": "./scripts/build-for-nginx.sh",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:status": "docker-compose ps",
    "docker:build": "docker-compose build"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "redis": "^4.7.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "three": "^0.180.0",
    "three-gpu-pathtracer": "^0.0.23",
    "three-mesh-bvh": "^0.7.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite": "^5.0.0"
  },
  "keywords": [
    "three.js",
    "editor",
    "3d",
    "webgl"
  ],
  "author": "mrdoob",
  "license": "MIT"
}
